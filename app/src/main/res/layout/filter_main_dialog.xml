<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/FrameFilterOption"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/corners_top_30"
    android:elevation="20dp"
    android:backgroundTint="@color/white"
    android:layout_gravity="bottom"
    >

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/ImageBtnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close"
        android:layout_marginStart="44dp"
        android:padding="13dp"
        android:background="@drawable/corners_all_10"
        android:backgroundTint="@color/dark_blue_original"
        app:layout_constraintBottom_toBottomOf="@id/TVTitle"
        app:layout_constraintTop_toTopOf="@id/TVTitle"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/TVTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="79dp"
        android:layout_marginTop="31dp"
        android:fontFamily="@font/mark_pro_medium"
        android:letterSpacing="-0.03"
        android:maxLines="1"
        android:text="Filter options"
        android:textColor="@color/dark_blue_original"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/SpinnerBrand"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TVBtnDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:fontFamily="@font/mark_pro_medium"
        android:letterSpacing="-0.02"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:paddingStart="21dp"
        android:paddingEnd="19dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/corners_all_10"
        android:backgroundTint="@color/orange_original"
        app:layout_constraintBottom_toBottomOf="@id/TVTitle"
        app:layout_constraintTop_toTopOf="@id/TVTitle"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/TVTitleBrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brand"
        android:fontFamily="@font/mark_pro_medium"
        android:letterSpacing="-0.02"
        android:maxLines="1"
        android:textColor="@color/dark_blue_original"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/SpinnerBrand"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="49dp"
        />

    <Spinner
        android:id="@+id/SpinnerBrand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/SpinnerPrice"
        android:layout_marginStart="46dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="45dp"
        />

    <TextView
        android:id="@+id/TVTitlePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:fontFamily="@font/mark_pro_medium"
        android:letterSpacing="-0.02"
        android:maxLines="1"
        android:textColor="@color/dark_blue_original"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/SpinnerPrice"
        android:layout_marginStart="46dp"
        android:layout_marginBottom="10dp"
        />

    <Spinner
        android:id="@+id/SpinnerPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/SpinnerSize"
        android:layout_marginStart="46dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="45dp"
        />


    <TextView
        android:id="@+id/TVTitleSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Size"
        android:fontFamily="@font/mark_pro_medium"
        android:letterSpacing="-0.02"
        android:maxLines="1"
        android:textColor="@color/dark_blue_original"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/SpinnerSize"
        android:layout_marginStart="46dp"
        android:layout_marginBottom="10dp"
        />

    <Spinner
        android:id="@+id/SpinnerSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="46dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="44dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>